{% extends 'base.html.twig' %}

{% block title %}Loja{% endblock %}

{% block body %}
    <h1>Loja</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ loja.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ loja.name }}</td>
            </tr>
            <tr>
                <th>Nif</th>
                <td>{{ loja.nif }}</td>
            </tr>
        </tbody>
    </table>
    <br/>
    <h5>Produtos da Loja</h5>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            {% if loja.produtos | length >  0 %}
                {% for produto in loja.produtos %}
                <tr>
                    <td>{{ produto.id }}</td>
                    <td>{{ produto.description }}</td>
                    <td>{{ produto.value }}</td>
                </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="4">sem produtos</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
    <br/>

    <a href="{{ path('loja_index') }}">back to list</a>

    <a href="{{ path('loja_edit', {'id': loja.id}) }}">edit</a>

    {{ include('loja/_delete_form.html.twig') }}
{% endblock %}
